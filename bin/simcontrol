#!/usr/bin/env ruby

require "thor"
require "simcontrol"

class SimControlCLI < Thor
  include Thor::Actions

  desc "init", "creates scaffolding for SimControl in this directory"
  def init
    base_dir = Dir.pwd
    destination_root= base_dir
    directory "scaffolding/scenarios", "scenarios"
    directory "scaffolding/results", "results"
    copy_file "scaffolding/Controlfile", "Controlfile"

  end

  def self.source_root
    File.join(File.dirname(__FILE__), '..', 'templates')
  end
end

SimControlCLI.start(ARGV)
